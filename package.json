{
  "name": "video-to-markdown",
  "version": "1.0.0",
  "private": true,
  "description": "Add videos to your markdown files easier.",
  "homepage": "https://video-to-markdown.netlify.com/",
  "author": {
    "name": "Marco Montalbano",
    "email": "me@marcomontalbano.com",
    "url": "https://marcomontalbano.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcomontalbano/video-to-markdown"
  },
  "keywords": [
    "md",
    "markdown",
    "video",
    "youtube",
    "vimeo",
    "dailymotion"
  ],
  "engines": {
    "node": "8.x"
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "dotenv": "^5.0.1",
    "file-loader": "^2.0.0",
    "https-proxy-agent": "^2.2.1",
    "jest": "^23.5.0",
    "netlify-lambda": "^0.4.0",
    "node-fetch": "^2.1.2",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "parcel": "^1.9.7",
    "posthtml-include": "^1.2.0",
    "super-gigi": "^1.17.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "clipboard": "^2.0.1",
    "file-type": "^9.0.0",
    "jquery": "^3.3.1",
    "nprogress": "^0.2.0",
    "primer-tooltips": "^1.5.7",
    "prismjs": "^1.15.0"
  },
  "scripts": {
    "test": "jest",
    "start:parcel": "parcel watch src/index.html -d dist/client",
    "start:client": "webpack-dev-server --mode development --hot --config webpack.client.js",
    "start:server": "netlify-lambda serve src/lambda -c webpack.server.js",
    "start": "npm-run-all -p start:*",
    "build:client": "parcel build src/index.html -d dist/client",
    "build:server": "netlify-lambda build src/lambda",
    "build": "npm-run-all test build:*"
  }
}
